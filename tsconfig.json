{
  "compilerOptions": {
    "declaration": true,
    "target": "es2018",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDirs": [
      "./deploy",
      "./test"
    ],
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "./test",
    "./deploy"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}